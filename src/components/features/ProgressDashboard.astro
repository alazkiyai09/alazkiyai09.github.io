---
import activityLog from '../../data/activity-log.json';
import journeyPhases from '../../data/journey-phases.json';

// Calculate total projects from journey phases
const totalProjects = 67;

// Calculate stats from activity log
const completedProjects = activityLog.activities.filter(a => a.type === 'project_complete').length;
const papersRead = activityLog.activities.reduce((sum, a) => sum + (a.metrics?.papersRead || 0), 0);
const experimentsRun = activityLog.activities.reduce((sum, a) => sum + (a.metrics?.experimentsRun || 0), 0);

// Get completed projects count
const completedProjectsCount = activityLog.activities.filter(a => a.type === 'project_complete').length;
const progressPercent = Math.round((completedProjectsCount / totalProjects) * 100);

// Calculate circle properties
const radius = 88;
const circumference = 2 * Math.PI * radius;

// Generate unique gradient ID for this instance
const gradientId = `dashboard-gradient-${Math.random().toString(36).substr(2, 9)}`;

// Determine current phase
const currentPhase = journeyPhases.phases.find(p => p.status === 'in-progress') || journeyPhases.phases.find(p => p.status === 'completed');
---

<section class="py-12">
  <div class="container">
    <div class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950 rounded-2xl p-8 text-white shadow-2xl">
      <div class="flex flex-col lg:flex-row items-center gap-8">
        <!-- Progress Ring -->
        <div class="flex-shrink-0">
          <div class="relative w-48 h-48">
            <svg class="w-full h-full transform -rotate-90">
              <!-- Background circle -->
              <circle
                cx="96"
                cy="96"
                r="88"
                stroke="rgba(255,255,255,0.1)"
                stroke-width="16"
                fill="none"
              />
              <!-- Progress circle -->
              <circle
                cx="96"
                cy="96"
                r="88"
                stroke={`url(#${gradientId})`}
                stroke-width="16"
                fill="none"
                stroke-dasharray={`${progressPercent * (circumference / 100)} ${circumference}`}
                stroke-linecap="round"
                class="transition-all duration-700 ease-out"
              />
              <!-- Gradient definition -->
              <defs>
                <linearGradient id={gradientId} x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#3b82f6" />
                  <stop offset="100%" stop-color="#8b5cf6" />
                </linearGradient>
              </defs>
            </svg>
            <div class="absolute inset-0 flex flex-col items-center justify-center">
              <span class="text-5xl font-bold">{completedProjectsCount}</span>
              <span class="text-sm text-slate-400">of {totalProjects} projects</span>
              <span class="text-2xl font-bold text-blue-400 mt-1">{progressPercent}%</span>
            </div>
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="flex-1 w-full">
          <h3 class="text-2xl font-bold mb-6">Research Portfolio Progress</h3>

          <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
            <!-- Projects Completed -->
            <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-colors">
              <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-green-500/20 rounded-lg">
                  <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="text-3xl font-bold text-green-400">{completedProjects}</div>
              </div>
              <div class="text-sm text-slate-400">Projects Completed</div>
            </div>

            <!-- Papers Studied -->
            <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-colors">
              <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-purple-500/20 rounded-lg">
                  <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
                <div class="text-3xl font-bold text-purple-400">{papersRead}</div>
              </div>
              <div class="text-sm text-slate-400">Papers Studied</div>
            </div>

            <!-- Experiments Run -->
            <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-colors">
              <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-orange-500/20 rounded-lg">
                  <svg class="w-5 h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                </div>
                <div class="text-3xl font-bold text-orange-400">{experimentsRun}</div>
              </div>
              <div class="text-sm text-slate-400">Experiments Run</div>
            </div>

            <!-- Overall Progress -->
            <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-colors">
              <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-blue-500/20 rounded-lg">
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </div>
                <div class="text-3xl font-bold text-blue-400">{progressPercent}%</div>
              </div>
              <div class="text-sm text-slate-400">Overall Progress</div>
            </div>
          </div>

          <!-- Journey Status -->
          <div class="mt-6 p-4 bg-white/5 rounded-xl border border-white/10">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="relative">
                  <span class="absolute inline-flex h-3 w-3 rounded-full bg-blue-400 opacity-75 animate-ping"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-blue-500"></span>
                </div>
                <div>
                  {currentPhase && (
                    <>
                      <div class="font-medium">Currently in Phase: {currentPhase.name}</div>
                      <div class="text-sm text-slate-400">{currentPhase.days} - {currentPhase.description}</div>
                    </>
                  )}
                </div>
              </div>
              <a href="/journey" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
                View Journey
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
