---
interface TimelineEvent {
  date: string;
  title: string;
  description: string;
  type?: 'milestone' | 'project' | 'publication';
}

interface Props {
  events: TimelineEvent[];
}

const { events } = Astro.props;

const getTypeColor = (type?: string) => {
  switch(type) {
    case 'milestone': return 'bg-accent';
    case 'project': return 'bg-accent-light';
    case 'publication': return 'bg-accent-pale';
    default: return 'bg-accent';
  }
};
---

<div class="relative">
  <!-- Vertical line -->
  <div class="absolute left-4 md:left-1/2 transform md:-translate-x-1/2 h-full w-0.5 bg-border"></div>

  <div class="space-y-8">
    {events.map((event, index) => (
      <div class={`relative flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
        <!-- Dot on the timeline -->
        <div class={`absolute left-4 md:left-1/2 transform md:-translate-x-1/2 w-4 h-4 ${getTypeColor(event.type)} rounded-full border-4 border-bg-primary`}></div>

        <!-- Content -->
        <div class="ml-12 md:ml-0 md:w-1/2 md:px-8">
          <div class="glass-card rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="text-sm text-text-subtle mb-2 font-medium">
              {new Date(event.date).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}
            </div>
            <h3 class="font-bold text-lg text-text-primary mb-2">
              {event.title}
            </h3>
            <p class="text-text-muted">
              {event.description}
            </p>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
