---
interface TimelineEvent {
  date: string;
  title: string;
  description: string;
  type?: 'milestone' | 'project' | 'publication';
}

interface Props {
  events: TimelineEvent[];
}

const { events } = Astro.props;

const getTypeColor = (type?: string) => {
  switch(type) {
    case 'milestone': return 'bg-blue-500';
    case 'project': return 'bg-green-500';
    case 'publication': return 'bg-purple-500';
    default: return 'bg-blue-500';
  }
};
---

<div class="relative">
  <!-- Vertical line -->
  <div class="absolute left-4 md:left-1/2 transform md:-translate-x-1/2 h-full w-0.5 bg-slate-200 dark:bg-slate-700"></div>

  <div class="space-y-8">
    {events.map((event, index) => (
      <div class={`relative flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
        <!-- Dot on the timeline -->
        <div class={`absolute left-4 md:left-1/2 transform md:-translate-x-1/2 w-4 h-4 ${getTypeColor(event.type)} rounded-full border-4 border-white dark:border-slate-900`}></div>

        <!-- Content -->
        <div class="ml-12 md:ml-0 md:w-1/2 md:px-8">
          <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md border border-slate-200 dark:border-slate-700 hover:shadow-lg transition-shadow">
            <div class="text-sm text-slate-500 dark:text-slate-400 mb-2 font-medium">
              {new Date(event.date).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}
            </div>
            <h3 class="font-bold text-lg text-slate-900 dark:text-white mb-2">
              {event.title}
            </h3>
            <p class="text-slate-600 dark:text-slate-400">
              {event.description}
            </p>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
