---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/azka',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/azka',
    icon: 'linkedin',
  },
  {
    name: 'Email',
    href: 'mailto:azka@example.com',
    icon: 'email',
  },
];

const quickLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Projects', href: '/projects' },
  { name: 'Contact', href: '/contact' },
];
---

<footer class="border-t border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-slate-900">
  <div class="container py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center text-white font-bold text-xl">
            A
          </div>
          <div>
            <div class="font-bold text-slate-900 dark:text-white">Azka</div>
            <div class="text-xs text-slate-600 dark:text-slate-400">AI Security Researcher</div>
          </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          Building secure federated learning systems for financial applications.
          Research focus on adversarial robustness and cryptographic verification.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-slate-900 dark:text-white mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="font-semibold text-slate-900 dark:text-white mb-4">Connect</h3>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target={social.icon === 'email' ? '_self' : '_blank'}
              rel={social.icon === 'email' ? '' : 'noopener noreferrer'}
              class="p-2 rounded-lg bg-slate-200 dark:bg-slate-800 hover:bg-blue-100 dark:hover:bg-blue-900/30 text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              aria-label={social.name}
            >
              {social.icon === 'github' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"
                  />
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              )}
              {social.icon === 'email' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-8 pt-8 border-t border-slate-200 dark:border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-slate-600 dark:text-slate-400">
        &copy; {currentYear} Azka. All rights reserved.
      </p>
      <p class="text-sm text-slate-500 dark:text-slate-500">
        Built with
        <a
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          class="text-orange-500 hover:text-orange-600 font-medium"
        >
          Astro
        </a>
        &
        <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-cyan-500 hover:text-cyan-600 font-medium"
        >
          Tailwind CSS
        </a>
      </p>
    </div>
  </div>
</footer>
