---
interface Props {
  mobile?: boolean;
}

const { mobile = false } = Astro.props;

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Projects', href: '/projects' },
  { name: 'Research', href: '/research' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/contact' },
];

const isActive = (href: string) => {
  return Astro.url.pathname === href;
};
---

{mobile ? (
  <nav class="container py-4 space-y-2">
    {navItems.map((item) => (
      <a
        href={item.href}
        class={`block px-4 py-2 rounded-lg transition-colors ${
          isActive(item.href)
            ? 'bg-accent-bg text-accent font-medium border border-accent-border'
            : 'text-text-subtle hover:bg-bg-surface-hover hover:text-text-primary'
        }`}
      >
        {item.name}
      </a>
    ))}
  </nav>
) : (
  <nav class="flex items-center space-x-1">
    {navItems.map((item) => (
      <a
        href={item.href}
        class={`px-3 py-2 rounded-lg text-sm font-medium transition-all duration-200 ${
          isActive(item.href)
            ? 'text-white bg-accent-bg border border-accent-border shadow-lg shadow-accent/10'
            : 'text-text-subtle hover:text-text-primary hover:bg-bg-surface-hover'
        }`}
      >
        {item.name}
      </a>
    ))}
  </nav>
)}
