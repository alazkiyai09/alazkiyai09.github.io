---
/**
 * ExpertiseCard - Title, subtitle, achievements list, tags
 * Uses glass-card style with hover effect
 */

interface Props {
  title: string;
  subtitle: string;
  description: string;
  tags: string[];
  class?: string;
}

const {
  title,
  subtitle,
  description,
  tags = [],
  class: className = ''
} = Astro.props;

const cardClass = [
  'glass-card p-6 md:p-8 flex flex-col',
  className
].filter(Boolean).join(' ');
---

<article class={cardClass}>
  <!-- Title with accent border -->
  <div class="mb-3">
    <h3 class="text-xl md:text-2xl font-bold text-text-primary font-display">
      {title}
    </h3>
    <p class="text-accent text-sm font-medium">{subtitle}</p>
  </div>

  <!-- Description -->
  <p class="text-text-muted text-sm leading-relaxed mb-4">
    {description}
  </p>

  <!-- Tags with subtle variant -->
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mt-auto">
      {tags.map((tag) => (
        <span class="badge-subtle text-xs px-2.5 py-0.5 rounded-full">
          {tag}
        </span>
      ))}
    </div>
  )}
</article>
