---
/**
 * Tag component - Clickable tag/pill
 * @variant - Tag style variant
 * @size sm | md
 * @clickable boolean
 * @href - Optional URL to render as link
 * @class - Additional CSS classes
 */

interface Props {
  variant?: 'gray' | 'blue' | 'purple' | 'green' | 'orange' | 'pink' | 'accent' | 'subtle';
  size?: 'sm' | 'md';
  clickable?: boolean;
  href?: string;
  class?: string;
}

const {
  variant = 'gray',
  size = 'md',
  clickable = false,
  href,
  class: className = ''
} = Astro.props;

const variants = {
  gray: 'bg-slate-100 text-slate-700 dark:bg-slate-700/50 dark:text-slate-300 border-slate-200 dark:border-slate-600',
  blue: 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300 border-blue-200 dark:border-blue-700',
  purple: 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300 border-purple-200 dark:border-purple-700',
  green: 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300 border-green-200 dark:border-green-700',
  orange: 'bg-orange-100 text-orange-700 dark:bg-orange-900/30 dark:text-orange-300 border-orange-200 dark:border-orange-700',
  pink: 'bg-pink-100 text-pink-700 dark:bg-pink-900/30 dark:text-pink-300 border-pink-200 dark:border-pink-700',
  accent: 'bg-accent-bg text-accent-pale border-accent-border',
  subtle: 'bg-white/5 text-text-subtle border-0',
};

const sizes = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-2.5 py-1 text-sm',
};

const tagClass = [
  'inline-flex items-center gap-1 rounded-lg font-medium border transition-all duration-200',
  variants[variant],
  sizes[size],
  clickable && !href && 'cursor-pointer hover:shadow-sm',
  href && 'hover:shadow-sm hover:-translate-y-0.5',
  className
].filter(Boolean).join(' ');
---

{href ? (
  <a class={tagClass} href={href}>
    <slot />
  </a>
) : (
  <span class={tagClass}>
    <slot />
  </span>
)}
