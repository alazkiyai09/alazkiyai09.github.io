---
/**
 * FadeIn component - Scroll animation wrapper
 * @param delay - Stagger delay value (1-6)
 * @param className - Additional CSS classes
 */

type DelayType = '1' | '2' | '3' | '4' | '5' | '6';

interface Props {
  delay?: DelayType;
  class?: string;
}

const {
  delay = '1',
  class: className = ''
} = Astro.props;

const delays: Record<DelayType, string> = {
  '1': '0ms',
  '2': '100ms',
  '3': '200ms',
  '4': '300ms',
  '5': '400ms',
  '6': '500ms',
};

const wrapperClass = [
  'animate-on-scroll',
  className
].join(' ');
---

<div
  class={wrapperClass}
  style:animation-delay={delays[delay]}
>
  <slot />
</div>

<script>
  // IntersectionObserver to add is-visible class when elements come into view
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    },
    {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    }
  );

  document.querySelectorAll('.animate-on-scroll').forEach((el) => {
    observer.observe(el);
  });
</script>
