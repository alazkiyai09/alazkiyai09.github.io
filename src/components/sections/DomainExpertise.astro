---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import domainExpertise from '../../data/domain-expertise.json';

const { areas } = domainExpertise;
---

<section class="section bg-slate-50 dark:bg-slate-900/50">
  <div class="container">
    <div class="text-center mb-12">
      <span class="text-sm font-medium text-blue-600 dark:text-blue-400 uppercase tracking-wider">
        Domain Expertise
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mt-2 mb-4">
        Specialized Knowledge Areas
      </h2>
      <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
        Combining industry experience in banking fraud detection with cutting-edge research
        in federated learning security and cryptographic systems.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {areas.map((area) => (
        <Card
          variant="default"
          hover={true}
          class="group"
        >
          <!-- Icon & Years Badge -->
          <div class="flex justify-between items-start mb-4">
            <span class="text-5xl">{area.icon}</span>
            <Badge variant="info" size="sm">
              {area.years}+ years
            </Badge>
          </div>

          <!-- Title & Type -->
          <div class="mb-3">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-1 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              {area.title}
            </h3>
            <span class={`text-xs px-2 py-1 rounded-full ${
              area.type === 'industry'
                ? 'bg-orange-100 text-orange-700 dark:bg-orange-900/30 dark:text-orange-300'
                : 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300'
            }`}>
              {area.type}
            </span>
          </div>

          <!-- Description -->
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
            {area.description}
          </p>

          <!-- Highlights -->
          <ul class="space-y-2 mb-4">
            {area.highlights.map((highlight) => (
              <li class="flex items-start gap-2 text-sm text-slate-700 dark:text-slate-300">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>{highlight}</span>
              </li>
            ))}
          </ul>

          <!-- Technologies -->
          <div class="flex flex-wrap gap-2 pt-4 border-t border-slate-200 dark:border-slate-700">
            {area.technologies.map((tech) => (
              <span class="px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 text-xs rounded-md font-mono">
                {tech}
              </span>
            ))}
          </div>

          <!-- Achievements (if any) -->
          {area.achievements && area.achievements.length > 0 && (
            <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-700">
              <div class="text-xs font-semibold text-slate-500 uppercase mb-2">Key Achievements</div>
              <ul class="space-y-1">
                {area.achievements.map((achievement) => (
                  <li class="flex items-start gap-2 text-xs text-slate-600 dark:text-slate-400">
                    <span class="text-yellow-500">‚≠ê</span>
                    <span>{achievement}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </Card>
      ))}
    </div>
  </div>
</section>
