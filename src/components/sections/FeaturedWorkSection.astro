---
import SectionHeader from '../ui/SectionHeader.astro';
import ProjectCard from '../ui/ProjectCard.astro';
import FadeIn from '../ui/FadeIn.astro';
import Button from '../ui/Button.astro';

const projects = [
  {
    title: 'SignGuard: Cryptographic FL Defense',
    description: 'Novel defense combining ECDSA signatures with anomaly detection and reputation scoring to protect federated learning from poisoning attacks.',
    impact: '94.5% attack detection rate with minimal overhead on honest participants',
    tags: ['PyTorch', 'Flower', 'ECDSA', 'Reputation Systems'],
    href: 'https://github.com/alazkiyai09/signguard'
  },
  {
    title: 'FL Security Research',
    description: 'Deep exploration of federated learning vulnerabilities and defenses: Byzantine attacks, secure aggregation, gradient leakage, and privacy attacks.',
    impact: '30+ attack/defense scenarios implemented and benchmarked',
    tags: ['PyTorch', 'Flower', 'TensorFlow', 'FastAPI'],
    href: 'https://github.com/alazkiyai09/fl-security-research'
  },
  {
    title: 'Fraudware Analyzer',
    description: 'Static analysis framework for banking trojan detection using PE file analysis, API call extraction, YARA rules, and ML classification.',
    impact: '88.7% accuracy on 150 banking trojans and 300 benign samples',
    tags: ['YARA', 'pefile', 'XGBoost', 'scikit-learn'],
    href: 'https://github.com/alazkiyai09/fraudware-analyzer'
  }
];
---

<section class="section-padding">
  <div class="container-custom">
    <FadeIn delay="1">
      <SectionHeader
        label="PROVEN RESULTS"
        title="Selected Projects"
        description="My most impactful work in AI security and fraud detection."
      />
    </FadeIn>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
      {projects.map((project, index) => (
        <FadeIn delay={((index % 3) + 2).toString() as '2' | '3' | '4'}>
          <ProjectCard
            title={project.title}
            description={project.description}
            impact={project.impact}
            tags={project.tags}
            href={project.href}
          />
        </FadeIn>
      ))}
    </div>

    <FadeIn delay="5">
      <div class="mt-12 text-center">
        <Button href="/projects" variant="secondary" size="lg">
          View All Projects
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </Button>
      </div>
    </FadeIn>
  </div>
</section>
