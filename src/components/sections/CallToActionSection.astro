---
import SectionHeader from '../ui/SectionHeader.astro';
import Button from '../ui/Button.astro';
import FadeIn from '../ui/FadeIn.astro';
import profile from '../../data/profile.json';

const { social, contact } = profile;
---

<section class="section-padding">
  <div class="container-custom">
    <div class="max-w-2xl mx-auto text-center">
      <FadeIn delay="1">
        <SectionHeader
          label="CONTACT"
          title="Let's Work Together"
          centered={true}
        />
      </FadeIn>

      <FadeIn delay="2">
        <p class="text-lg text-text-muted mb-10 mt-6">
          Building FL defenses? Scaling fraud detection? Let's talk. Based in Jakarta, open to remote.
        </p>
      </FadeIn>

      <FadeIn delay="3">
        <div class="flex flex-wrap justify-center gap-4">
          <Button href={`mailto:${contact.email}`} variant="primary" size="lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {contact.email}
          </Button>
          <Button href={social.linkedin} variant="secondary" size="lg">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
            LinkedIn
          </Button>
        </div>
      </FadeIn>
    </div>
  </div>
</section>
