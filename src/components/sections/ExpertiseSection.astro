---
import SectionHeader from '../ui/SectionHeader.astro';
import ExpertiseCard from '../ui/ExpertiseCard.astro';
import FadeIn from '../ui/FadeIn.astro';

const expertiseAreas = [
  {
    title: 'Federated Learning Security',
    subtitle: 'Core Research Focus',
    description: 'Attacking federated systems to find weaknesses, then building the defenses. My work spans adversarial robustness, poisoning detection, and cryptographic trust verification.',
    achievement: 'SignGuard: 94.5% attack detection rate',
    tags: ['Federated Learning', 'Adversarial ML', 'ECDSA', 'ZKP']
  },
  {
    title: 'Production Fraud Detection',
    subtitle: 'Industry Experience',
    description: "Production-grade fraud detection for major Indonesian financial institutions. I've maintained 99.9% SLA on real-time transaction monitoring systems handling millions of events.",
    achievement: '99.9%+ SLA on live systems',
    tags: ['SAS Fraud Mgmt', 'Real-time ML', 'Transaction Monitoring', 'LSTM']
  }
];
---

<section class="section-padding">
  <div class="container-custom">
    <FadeIn delay="1">
      <SectionHeader
        label="EXPERTISE"
        title="What I Do"
        description="Security research grounded in real-world production experience."
      />
    </FadeIn>

    <div class="grid md:grid-cols-2 gap-6 mt-12 max-w-4xl mx-auto">
      {expertiseAreas.map((area, index) => (
        <FadeIn delay={(index + 2).toString() as '2' | '3'}>
          <ExpertiseCard
            title={area.title}
            subtitle={area.subtitle}
            description={area.description}
            achievement={area.achievement}
            tags={area.tags}
          />
        </FadeIn>
      ))}
    </div>
  </div>
</section>
