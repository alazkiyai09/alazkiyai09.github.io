---
import SectionHeader from '../ui/SectionHeader.astro';
import ExpertiseCard from '../ui/ExpertiseCard.astro';
import FadeIn from '../ui/FadeIn.astro';

const expertiseAreas = [
  {
    icon: 'üõ°Ô∏è',
    title: 'Federated Learning Security',
    subtitle: 'Core Research Focus',
    description: 'Attacking federated systems to find weaknesses, then building the defenses. My work spans adversarial robustness, poisoning detection, and cryptographic trust verification.',
    achievements: [
      'Built SignGuard ‚Äî ECDSA + anomaly detection achieving 94.5% attack detection rate',
      'Explored 30+ FL security scenarios: Byzantine attacks, secure aggregation, gradient leakage',
      'Zero-knowledge proof systems for verifiable trust in multi-institution FL'
    ],
    tags: ['Federated Learning', 'Adversarial ML', 'ECDSA', 'ZKP']
  },
  {
    icon: 'üè¶',
