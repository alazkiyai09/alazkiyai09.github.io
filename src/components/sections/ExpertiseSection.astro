---

<section class="section-padding">
  <div class="container-custom">
    <FadeIn delay="1">
      <SectionHeader
        label="EXPERTISE"
        title="What I Do"
        description="Security research grounded in real-world production experience."
      />
    </FadeIn>

    <div class="grid md:grid-cols-2 gap-6 mt-12 max-w-4xl mx-auto">
      {expertiseAreas.map((area, index) => (
        <FadeIn delay={(index + 2).toString() as '2' | '3'}>
          <ExpertiseCard
            icon={area.icon}
            title={area.title}
            subtitle={area.subtitle}
            description={area.description}
            achievements={area.achievements}
            tags={area.tags}
          />
        </FadeIn>
      ))}
    </div>
  </div>
</section>
