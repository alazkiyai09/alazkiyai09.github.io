---
import Button from '../ui/Button.astro';
import profile from '../../data/profile.json';
import activityLog from '../../data/activity-log.json';
import publications from '../../data/publications.json';

const { name, title, tagline, location, status, contact, social } = profile;

// Calculate stats dynamically from data
const totalJourneyDays = 67; // Total completed projects
const completedProjects = 67; // All projects across portfolios
const totalPublications = publications.publications.length;
const yearsExp = 3;
const totalPortfolios = 4;
---

<section class="section relative overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 -z-10"></div>
  <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-20 dark:opacity-10 -z-10"></div>

  <div class="container">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-6 animate-fade-in">
        <!-- Status badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-sm font-medium">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
          </span>
          {status.current}
        </div>

        <!-- Heading -->
        <div class="space-y-4">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight">
            <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">
              Hi, I'm {name}
            </span>
          </h1>

          <p class="text-2xl md:text-3xl font-semibold text-slate-700 dark:text-slate-300">
            {title}
          </p>

          <p class="text-lg text-slate-600 dark:text-slate-400 max-w-xl">
            {tagline}
          </p>
        </div>

        <!-- Location -->
        <div class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
          <span>{location.flag}</span>
          <span>{location.city}, {location.region}, {location.country}</span>
          {location.availableForRemote && (
            <span class="ml-2 px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-xs rounded-full">
              Open to Remote
            </span>
          )}
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 pt-4">
          <Button href="/projects" variant="primary" size="lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            View Projects
          </Button>

          <Button href="/contact" variant="secondary" size="lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Contact Me
          </Button>
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-4 pt-4">
          <a
            href={profile.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>

          <a
            href={profile.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>

          <a
            href={`mailto:${contact.email}`}
            class="p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors"
            aria-label="Email"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Image/Visual -->
      <div class="relative hidden lg:block">
        <div class="relative w-full aspect-square max-w-lg mx-auto">
          <!-- Decorative elements -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-purple-600 rounded-3xl transform rotate-6 opacity-20"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-purple-500 to-pink-600 rounded-3xl transform -rotate-3 opacity-20"></div>

          <!-- Main card -->
          <div class="relative bg-white dark:bg-slate-800 rounded-3xl shadow-2xl p-8 border border-slate-200 dark:border-slate-700">
            <div class="space-y-6">
              <!-- Profile placeholder -->
              <div class="w-32 h-32 mx-auto bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-5xl font-bold">
                A
              </div>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-4">
                <div class="text-center p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl">
                  <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">{completedProjects}</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Projects</div>
                </div>
                <div class="text-center p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl">
                  <div class="text-3xl font-bold text-purple-600 dark:text-purple-400">{yearsExp}+</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Years Exp</div>
                </div>
                <div class="text-center p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl">
                  <div class="text-3xl font-bold text-green-600 dark:text-green-400">{totalPortfolios}</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Portfolios</div>
                </div>
                <div class="text-center p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl">
                  <div class="text-3xl font-bold text-pink-600 dark:text-pink-400">{totalPublications}</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Publications</div>
                </div>
              </div>

              <!-- Research focus -->
              <div class="text-center">
                <div class="text-sm text-slate-500 uppercase tracking-wider mb-2">Research Focus</div>
                <div class="flex flex-wrap justify-center gap-2">
                  <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-sm">Federated Learning</span>
                  <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full text-sm">AI Security</span>
                  <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full text-sm">Cryptography</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
