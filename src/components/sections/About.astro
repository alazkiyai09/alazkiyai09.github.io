---
import profile from '../../data/profile.json';
import education from '../../data/education.json';

const { bio, location } = profile;
const edu = education.education[0];
---

<section class="section">
  <div class="container">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">About Me</h2>
        <p class="text-lg text-slate-600 dark:text-slate-400">
          Passionate about building secure and trustworthy AI systems
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 items-start">
        <!-- Bio -->
        <div class="space-y-6">
          <div>
            <h3 class="text-xl font-bold mb-3">Background</h3>
            <p class="text-slate-600 dark:text-slate-400">
              {bio.long}
            </p>
          </div>

          <div>
            <h3 class="text-xl font-bold mb-3">Current Focus</h3>
            <p class="text-slate-600 dark:text-slate-400">
              I've completed 67 projects across 4 comprehensive portfolios covering federated learning security,
              privacy-preserving phishing detection, production AI systems, and published steganography research.
              Currently focused on advancing trustworthy AI through adversarial robustness and cryptographic security.
            </p>
          </div>

          <div>
            <h3 class="text-xl font-bold mb-3">Research Interests</h3>
            <ul class="space-y-2">
              {[
                'Federated Learning Security (Byzantine robustness, secure aggregation)',
                'Adversarial Machine Learning (Poisoning attacks, membership inference)',
                'Privacy-Preserving AI (Differential privacy, homomorphic encryption, ZK proofs)',
                'Cryptographic Security (ECDSA, commitment schemes, verifiable computation)'
              ].map((interest) => (
                <li class="flex items-start gap-2 text-slate-600 dark:text-slate-400">
                  <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>{interest}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Education & Details -->
        <div class="space-y-6">
          <!-- Education Card -->
          <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
            <div class="flex items-center gap-3 mb-4">
              <div class="p-3 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path d="M12 14l9-5-9-5-9 5 9 5z" />
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-slate-900 dark:text-white">{edu.degree}</h4>
                <p class="text-sm text-slate-600 dark:text-slate-400">{edu.institution}</p>
              </div>
            </div>

            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-slate-600 dark:text-slate-400">Period</span>
                <span class="font-medium text-slate-900 dark:text-white">
                  {new Date(edu.period.start).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                  {' ‚Äì '}
                  {new Date(edu.period.end).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                </span>
              </div>
              <div class="flex justify-between">
                <span class="text-slate-600 dark:text-slate-400">GPA</span>
                <span class="font-medium text-slate-900 dark:text-white">{edu.gpa}</span>
              </div>
              <div class="pt-2 border-t border-slate-200 dark:border-slate-700">
                <span class="text-slate-600 dark:text-slate-400">Thesis: </span>
                <span class="font-medium text-slate-900 dark:text-white">{edu.thesis}</span>
              </div>
            </div>

            {edu.highlights && edu.highlights.length > 0 && (
              <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-700">
                <div class="text-xs font-semibold text-slate-500 uppercase mb-2">Highlights</div>
                <ul class="space-y-1">
                  {edu.highlights.slice(0, 3).map((highlight) => (
                    <li class="flex items-start gap-2 text-xs text-slate-600 dark:text-slate-400">
                      <span class="text-yellow-500">üèÜ</span>
                      <span>{highlight}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>

          <!-- Location -->
          <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
            <div class="flex items-center gap-3">
              <div class="p-3 bg-green-100 dark:bg-green-900/30 rounded-lg">
                <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <div class="font-bold text-slate-900 dark:text-white">
                  {location.flag} Jakarta
                </div>
                <div class="text-sm text-slate-600 dark:text-slate-400">Indonesia</div>
                <div class="text-xs text-slate-500 mt-1">Timezone: {location.timezone}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
