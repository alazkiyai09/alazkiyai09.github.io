---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import { getCollection } from 'astro:content';
import Badge from '../../components/ui/Badge.astro';
import Tag from '../../components/ui/Tag.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

const title = `${project.data.title} - Azka`;
const description = project.data.summary;
---

<BaseLayout title={title} description={description}>
  <article class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm">
          <ol class="flex items-center gap-2">
            <li>
              <a href="/" class="text-slate-600 dark:text-slate-400 hover:text-blue-600">Home</a>
            </li>
            <li class="text-slate-400">/</li>
            <li>
              <a href="/projects" class="text-slate-600 dark:text-slate-400 hover:text-blue-600">Projects</a>
            </li>
            <li class="text-slate-400">/</li>
            <li class="text-slate-900 dark:text-white font-medium">Day {project.data.day}</li>
          </ol>
        </nav>

        <!-- Header -->
        <header class="mb-8">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <Badge variant="info">Day {project.data.day}</Badge>
            <Badge
              variant={
                project.data.status === 'completed' ? 'success' :
                project.data.status === 'in-progress' ? 'warning' :
                'default'
              }
            >
              {project.data.status}
            </Badge>
            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-full text-sm font-medium">
              {project.data.category}
            </span>
          </div>

          <h1 class="text-4xl md:text-5xl font-bold mb-4">{project.data.title}</h1>
          <p class="text-xl text-slate-600 dark:text-slate-400">
            {project.data.summary}
          </p>

          <!-- Dates -->
          {(project.data.startDate || project.data.completedDate) && (
            <div class="flex flex-wrap gap-4 mt-4 text-sm text-slate-600 dark:text-slate-400">
              {project.data.startDate && (
                <div>
                  <span class="font-medium">Started:</span>{' '}
                  {new Date(project.data.startDate).toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </div>
              )}
              {project.data.completedDate && (
                <div>
                  <span class="font-medium">Completed:</span>{' '}
                  {new Date(project.data.completedDate).toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </div>
              )}
            </div>
          )}
        </header>

        <!-- Links -->
        <div class="flex flex-wrap gap-3 mb-8">
          {project.data.repository && (
            <a
              href={project.data.repository}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-slate-900 dark:bg-white text-white dark:text-slate-900 rounded-lg font-medium hover:bg-slate-700 dark:hover:bg-slate-100 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              GitHub Repository
            </a>
          )}
          {project.data.demo && (
            <a
              href={project.data.demo}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 rounded-lg font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Live Demo
            </a>
          )}
          {project.data.paper && (
            <a
              href={project.data.paper}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 border border-purple-300 dark:border-purple-600 text-purple-700 dark:text-purple-300 rounded-lg font-medium hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              Research Paper
            </a>
          )}
        </div>

        <!-- Metrics -->
        {project.data.metrics && (
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8 p-6 bg-slate-50 dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700">
            {project.data.metrics.linesOfCode && (
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
                  {project.data.metrics.linesOfCode.toLocaleString()}
                </div>
                <div class="text-sm text-slate-600 dark:text-slate-400">Lines of Code</div>
              </div>
            )}
            {project.data.metrics.accuracy && (
              <div class="text-center">
                <div class="text-2xl font-bold text-green-600 dark:text-green-400">
                  {project.data.metrics.accuracy}%
                </div>
                <div class="text-sm text-slate-600 dark:text-slate-400">Accuracy</div>
              </div>
            )}
            {project.data.metrics.experimentsRun && (
              <div class="text-center">
                <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">
                  {project.data.metrics.experimentsRun}
                </div>
                <div class="text-sm text-slate-600 dark:text-slate-400">Experiments</div>
              </div>
            )}
            {project.data.day && (
              <div class="text-center">
                <div class="text-2xl font-bold text-orange-600 dark:text-orange-400">
                  Day {project.data.day}
                </div>
                <div class="text-sm text-slate-600 dark:text-slate-400">Journey Day</div>
              </div>
            )}
          </div>
        )}

        <!-- Tags & Technologies -->
        <div class="mb-8 space-y-4">
          <div>
            <h3 class="text-sm font-semibold text-slate-900 dark:text-white uppercase mb-2">Tags</h3>
            <div class="flex flex-wrap gap-2">
              {project.data.tags.map((tag) => (
                <Tag variant="purple">{tag}</Tag>
              ))}
            </div>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-slate-900 dark:text-white uppercase mb-2">Technologies</h3>
            <div class="flex flex-wrap gap-2">
              {project.data.technologies.map((tech) => (
                <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-md text-sm font-mono">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Research Connection -->
        {project.data.researchConnection && (
          <div class="mb-8 p-6 bg-blue-50 dark:bg-blue-900/10 rounded-xl border border-blue-200 dark:border-blue-800">
            <h3 class="font-bold text-slate-900 dark:text-white mb-2">Research Connection</h3>
            {project.data.researchConnection.supervisor && (
              <div class="text-sm text-slate-700 dark:text-slate-300 mb-1">
                <span class="font-medium">Supervisor:</span> {project.data.researchConnection.supervisor}
              </div>
            )}
            {project.data.researchConnection.university && (
              <div class="text-sm text-slate-700 dark:text-slate-300 mb-1">
                <span class="font-medium">University:</span> {project.data.researchConnection.university}
              </div>
            )}
            {project.data.researchConnection.relevance && (
              <div class="text-sm text-slate-600 dark:text-slate-400 mt-2">
                {project.data.researchConnection.relevance}
              </div>
            )}
          </div>
        )}

        <!-- Content -->
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <Content />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
