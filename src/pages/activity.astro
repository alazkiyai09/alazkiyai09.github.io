    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Activity Feed</h1>
        <p class="text-xl text-slate-600 dark:text-slate-400">
          Real-time tracking of my research portfolio progress
        </p>
      </div>
    </div>
  </div>

  <ActivityFeed limit={50} showHeader={false} />

  <section class="section bg-slate-50 dark:bg-slate-900/50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-6">Activity Types</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white dark:bg-slate-800 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
            <h3 class="font-bold mb-3 flex items-center gap-2">
