---
import BaseLayout from '../components/layout/BaseLayout.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import PublicationsSection from '../components/sections/Publications.astro';
import publications from '../data/publications.json';

const title = 'Publications - Azka Al Azkiyai';
const description = 'Publications in federated learning security, steganography, and AI systems.';
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-bg-primary section-padding">
    <div class="container-custom">
      <SectionHeader
        label="PUBLICATIONS"
        title="Research Publications"
        description="Peer-reviewed research in AI security and privacy-preserving machine learning"
        centered={true}
      />

      <PublicationsSection publications={publications.publications} />
    </div>
  </div>
</BaseLayout>
