---
import BaseLayout from '../components/layout/BaseLayout.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import Button from '../components/ui/Button.astro';
import profile from '../data/profile.json';

const title = 'Contact - Azka';
const description = 'Get in touch for collaborations, research opportunities, or questions about my work in AI security and federated learning.';

const { contact, social } = profile;
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-bg-primary section-padding">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto space-y-12">
        <!-- Hero Section -->
        <SectionHeader
          label="CONTACT"
          title="Let's Connect"
          description="Collaborations, research opportunities, or just a chat about AI security"
          centered={true}
        />

        <!-- Intro -->
        <p class="text-text-muted text-lg text-center leading-relaxed max-w-2xl mx-auto">
          I'm always interested in hearing about new opportunities, discussing research ideas, or connecting with fellow researchers and engineers working on secure AI systems.
        </p>

        <!-- Primary CTA - Email -->
        <section class="glass-card p-8 md:p-10 text-center">
          <h2 class="font-display font-bold text-text-primary text-xl mb-6">
            Send me a message
          </h2>
          <Button
            variant="primary"
            size="lg"
            href={`mailto:${contact.email}`}
            class="w-full md:w-auto min-w-64"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email Me
          </Button>
          <p class="text-text-subtle text-sm mt-4">
            Response time: Usually within 24-48 hours
          </p>
        </section>

        <!-- Social Links -->
        <section>
          <h2 class="font-display font-bold text-text-primary text-xl mb-6 text-center">
            Connect elsewhere
          </h2>
          <div class="flex flex-wrap justify-center gap-4">
            <a
              href={social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 border border-border hover:border-accent text-text-primary bg-transparent hover:bg-bg-surface rounded-btn font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-bg-primary px-6 py-3 text-lg hover:-translate-y-0.5 active:translate-y-0"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              GitHub
            </a>
            <a
              href={social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 border border-border hover:border-accent text-text-primary bg-transparent hover:bg-bg-surface rounded-btn font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-bg-primary px-6 py-3 text-lg hover:-translate-y-0.5 active:translate-y-0"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
              LinkedIn
            </a>
          </div>
        </section>

        <!-- Additional Info -->
        <section class="text-center">
          <p class="text-text-subtle text-sm">
            {profile.location.flag} Based in {profile.location.city}, {profile.location.country}
          </p>
          <p class="text-text-subtle text-sm mt-1">
            Timezone: {profile.location.timezone}
          </p>
        </section>
      </div>
    </div>
  </div>
</BaseLayout>
